<% content_for :navbar do %>
  <%= link_to image_tag('home.png'), '/' %></a> <%= image_tag 'nav_sep.png' %>
  <%= link_to 'Packages', packages_path %> <%= image_tag 'nav_sep.png' %>
  <%= @package.name %>
<% end %>

<p>
  <b>Name:</b>
  <%= @package.name %>
</p>

<p>
  <b>Version:</b>
  <%= @package.version %>
</p>

<p>
  <b>Deprecated:</b>
  <%= yes_no @package.old %>
</p>

<p>
  <b>File:</b>
  <%= @package.file_path %>
</p>

<% content_for :admin do %>
  <%= link_to 'Edit', edit_package_path(@package) %> |
  <%= link_to 'Delete', @package, :method => 'DELETE', :confirm => 'Really? Marking it as deprecated seems like a better idea...' %>
<% end %>