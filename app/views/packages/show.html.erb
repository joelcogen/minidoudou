<p id="notice"><%= notice %></p>

<div id="nav">
  <%= link_to 'Back', packages_path %>
</div>

<p>
  <b>Name:</b>
  <%= @package.name %>
</p>

<p>
  <b>Version:</b>
  <%= @package.version %>
</p>

<p>
  <b>Deprecated:</b>
  <%= @package.old %>
</p>

<p>
  <b>File:</b>
  <%= @package.file_path %>
</p>

<p>
  <b>Apk:</b>
  <%= @package.apk %>
</p>

<div id="admin">
  <%= link_to 'Edit', edit_package_path(@package) %> |
  <%= link_to 'Delete', @package, :method => 'DELETE', :confirm => 'Really? Marking it as deprecated seems like a better idea...' %>
</div>

