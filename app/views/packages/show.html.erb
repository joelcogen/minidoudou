<h1><%= link_to image_tag('home.png'), '/' %></a> <%= image_tag 'nav_sep.png' %>
<%= link_to 'Packages', packages_path %> <%= image_tag 'nav_sep.png' %>
<%= @package.name %></h1>

<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @package.name %>
</p>

<p>
  <b>Version:</b>
  <%= @package.version %>
</p>

<p>
  <b>Deprecated:</b>
  <%= @package.old %>
</p>

<p>
  <b>File:</b>
  <%= @package.file_path %>
</p>

<p>
  <b>APK:</b>
  <%= @package.apk %>
  <br/>
  <b>Must be in /system</b>
  <%= @package.system_only %>
</p>

<div id="admin">
  <%= link_to 'Edit', edit_package_path(@package) %> |
  <%= link_to 'Delete', @package, :method => 'DELETE', :confirm => 'Really? Marking it as deprecated seems like a better idea...' %>
</div>

